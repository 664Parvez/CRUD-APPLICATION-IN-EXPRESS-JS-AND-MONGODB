
<%-include('./partials/header.ejs')%>

    <div class="container py-5">
        <div class="text-center user_icon"><i class="fa-solid fa-users"></i></div>
        <h2 class="text-center mb-5 text-success">USER MANAGEMENT SYSTEM</h2>
        <a href="/new-user" class="btn btn-outline-danger mb-4"><i class="fa-solid fa-user"></i> Insert New Data</a>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Gender</th>
                <th scope="col">Status</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>
            <tbody>


                <% data.map ((items, no=1) => { %>

                <tr>
                    <th scope="row"><%= no + 1 %></th>
                    <td><%=items.firstName%></td>
                    <td><%=items.lastName%></td>
                    <td><%=items.email%></td>
                    <td><%=items.gender%></td>
                    <td><%=items.status%></td>
                    <td><a href="/update-user/<%= items._id%>" class="btn btn-primary">Update</a></td>
                    <td><a type="submit" href="/delete/<%= items._id%>" class="btn btn-danger">Delete</a></td>
                </tr>

                <% }) %>

            </tbody>
        </table>
    </div>



<%-include('./partials/bottom.ejs')%>
